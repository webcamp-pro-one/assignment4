<div class="container">
    
    <div class ="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-3">
        </div>
        <div class="col-md-5 py-5">
            <h3 class="pb-4">注文履歴詳細</h3>
            <table class="table">
                <tr>
                    <th>購入者</th>
                    <td><%= @order.customer_id.first_name %></td>
                </tr>
                <tr>
                    <th>注文日</th>
                    <td><%= @order.customer_id.create_at %></td>
                </tr>
                <tr>
                    <th>配送先</th>
                    <td>
                        <%= @order.delivery_postal_code %><br/>
                        <%= @order.delivery_address %>
                    </td>
                </tr>
                <tr>
                    <th>支払方法</th>
                    <td></td>
                </tr>
                <tr>
                   <th>注文ステータス</th>
                   <td></td>
                </tr>
            </table>
            
            <table class="table">
                <tr>
                    <th>商品名</th>
                    <th>単価</th>
                    <th>数量</th>
                    <th>小計</th>
                    <th>製作ステータス</th>
                </tr>
                <% @order.order_item_id.each do |order_item| %>
                <tr>
                    <td><%= oder_item.create_at %></td>
                    <td><%= oder_item.price %></td>
                    <td><%= oder_item.amount %></td>
                    <td><%= oder_item.price*oder_item_id.amount %></td>
                    <td><%= oder_item.is_active %></td>
                </tr>
                <% end %>
            </table>
        </div>
        <div class="col-md-2">
        </div>
    </div>
</div>